}
.userInfo_items_box{
  height: 96px;
  width: 100%;
  /* background-color: salmon; */
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.userInfo_Name{
  width: 100%;
  line-height: 40px;
  text-align: center;
   font-size: 18px;
   font-weight: 500;
}
.userInfo_box{
  width: calc(100% - 40px);
  height: 180px;
  background-color: #201F1E;
  border-radius: 15px;
  margin-left: 20px;
  margin-top: -60px;
  z-index: 100;
  position: relative;
  color: #EDEDED;
}
.userInfo_icon{
  margin-left: calc(50% - 36px);
