  display: flex;
  justify-content: start;
  align-items: center;
  flex-direction: column;
  width: calc(33% - 5px );
  color: #ffffff;
  font-size: 13px;
  font-weight: 500;
}
.UserInfo_tool_box{
  display: flex;
  justify-content: center;
  align-items: center;
  width: calc(100% - 40px);
  margin-left: 20px;
  background-color: #201F1E;
  border-radius: 15px;
  height: 92px;
  margin-top: 20px;
}
.exchange_History_title{
  padding-left: 14px;
  font-size: 16px;
  font-weight: 500;
  color: #EDEDED;
  line-height: 40px;
}
.exchange_History_box{
  background-color: #201F1E;
  border-radius: 15px;
